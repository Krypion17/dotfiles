(defpoll time
  :interval "1s"
  :initial "time"
  "./scripts/time.sh")

(defpoll tooltip
  :interval "1s"
  :initial "full time"
  "./scripts/time.sh --full-time")

(defpoll icontime
  :interval "1s"
  :initial "e"
  "./scripts/time.sh --icon")

(defwidget timewid []
  (box
    :tooltip "${tooltip}"
    :class "widgets"
    :halign "end"
    (label
      :class "icon"
      :text "${icontime}"
      :limit-width 1
      :width 1)
    "${time} "))
