(defvar volume
  30)

(defvar iconvol
  "ï©¾")

(defvar classvol
  "clickable")

(defvar enabledvol
  false)

(defwidget volumewid []
  (button
    :class "${classvol}"
    :style "padding: 0;"
    :onclick "./scripts/css/click.sh vol ${enabledvol}"
    :timeout "1s"
    (box
      :class "widgets"
      :style "background-color: rgba(0, 0, 0, 0); margin: 0;"
      :space-evenly false
      :spacing 10
      (label
        :class "icon"
        :text "${iconvol}")
      "${volume}%")))

(defwindow volumepop
  :monitor 0
  :geometry (geometry
              :x "0"
              :y "56px"
              :width "270px"
              :anchor "top right")
  :stacking "fg"
  :wm-ignore true
  :window-type "dialog"
(revealer
  :transition "slidedown"
  :reveal enabledvol
  :duration "200ms"
  (box
    :space-evenly false
    :halign "end"
    (box :halign "end" :class "round" :style "border-radius: 0 25px 0 0; box-shadow: 0 -25px 0 0 #111111;")
    (box
      :class "container"
      :style "border-radius: 0 0 25px 25px;"
      (box
        :space-evenly false
        :spacing 30
        :class "widgets"
      (label
        :class "icon"
        :style "padding-left: 10px;"
        :text "${iconvol}")
      (scale
        :orientation "h"
        :active true
        :value volume
        :min 0
        :max 100
        :marks "1"
        :timeout "10s"
        :onchange "amixer -D pulse sset Master {}% && sleep 1 && ./scripts/widgets/volume.sh")))
  (box :halign "end" :class "round" :style "border-radius: 25px 0 0 0; box-shadow: 0 -25px 0 0 #111111;")
  )))
