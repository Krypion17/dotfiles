(defpoll volume
  :interval "500ms"
  :initial "0%"
  "./scripts/volume.sh")

(defpoll iconvol
  :interval "1s"
  :initial "e"
  "./scripts/volume.sh --icon")

(defwidget volumewid []
  (box
    :class "widgets"
    :space-evenly false
    :spacing 10
    (label
      :class "icon"
      :text "${iconvol}")
    "${volume} "))
