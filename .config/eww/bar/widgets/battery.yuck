(defpoll battery
  :interval "1s"
  "./scripts/battery.sh")

(defpoll iconbat
  :interval "1s"
  "./scripts/battery.sh --icon")

(defpoll colorbat
  :interval "1s"
  "./scripts/battery.sh --color")

(defwidget batterywid []
  (box
    :class "widgets"
    :halign "end"
    :space-evenly false
    :spacing 10
    (label
      :class "icon"
      :style "color: ${colorbat};"
      :text "${iconbat}")
    "${battery}% "))
